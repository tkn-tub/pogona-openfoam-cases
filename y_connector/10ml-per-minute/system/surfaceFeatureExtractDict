backgroundInletPatch.stl
{
    extractionMethod extractFromSurface;
    extractFromSurfaceCoeffs
    {includedAngle 150;}
    writeObj yes;
}
particleInletPatch.stl
{
    extractionMethod extractFromSurface;
    extractFromSurfaceCoeffs
    {includedAngle 150;}
    writeObj yes;
}
outletPatch.stl
{
    extractionMethod extractFromSurface;
    extractFromSurfaceCoeffs
    {includedAngle 150;}
    writeObj yes;
}
yConnectorPatch.stl
{
    extractionMethod extractFromSurface;
    extractFromSurfaceCoeffs
    {includedAngle 150;}
    writeObj yes;
}

